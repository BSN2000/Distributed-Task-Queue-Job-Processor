								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 429) {",
									"    pm.test(\"Rate limit hit\", function () {",
									"        pm.expect(pm.response.code).to.eql(429);",
									"    });",
									"} else {",
									"    pm.test(\"Job created\", function () {",
									"        pm.expect(pm.response.code).to.be.oneOf([201, 500]);",
									"    });",
									"}"
								],
